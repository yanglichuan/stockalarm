<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Designmain" parent="Base.Theme.DesignDemo">
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/secondary_color</item>

        <item name="android:colorPrimary">@color/primary_color</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="android:colorPrimaryDark">@color/primary_dark_color</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/secondary_color</item>
        <!--<item name="android:navigationBarColor">@color/primary_dark_color</item>-->
        <item name="android:windowBackground">@android:color/white</item>

        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>


    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/pull_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/push_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/pull_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/push_out_right</item>
        <!--<item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>-->
        <!--<item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>-->
        <!--<item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>-->
        <!--<item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>-->
    </style>


    

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Main theme colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/secondary_color</item>
        <!--   your app's branding color (for the app bar) -->
        <item name="android:colorPrimary">@color/primary_color</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="android:colorPrimaryDark">@color/primary_dark_color</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/secondary_color</item>
        <!--<item name="android:navigationBarColor">@color/primary_dark_color</item>-->
    </style>
</resources>